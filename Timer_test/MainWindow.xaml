<Window x:Class="Timer_test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Timer" Height="550" Width="550" Background="Black">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="36"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Background" Value="Red" />
            <Setter Property="Foreground" Value="Yellow" />
        </Style>
    </Window.Resources>
    <Grid>
        <Button Name="startB" Content="Start" HorizontalAlignment="Left" Margin="210,192,0,0" VerticalAlignment="Top" Width="158" Click="startB_Click"/>
        <Button Name="pauseB" Content="pause" HorizontalAlignment="Left" Margin="210,242,0,0" VerticalAlignment="Top" Width="158" Click="pauseB_Click"/>
        <Button Name="stopB" Content="stop" HorizontalAlignment="Left" Margin="210,291,0,0" VerticalAlignment="Top" Width="158" Click="stopB_Click"/>
        <TextBlock Name="tb1" TextAlignment="Center" Margin="192,83,151,0" TextWrapping="Wrap" Text="0 : 0 : 0" VerticalAlignment="Top" Height="73"/>

    </Grid>

</Window>
